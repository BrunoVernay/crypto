<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.jcryptool.visual"
            class="org.jcryptool.visual.xeuclidean.views.XEuclideanView"
            icon="icons/view.gif"
          	id="org.jcryptool.visual.xeuclidean.views.XEuclideanView"
            name="%view.name.0">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/help/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
            contextHelpId="org.jcryptool.visual.xeuclidean.view"
            name="%Visual.name.0"
            viewId="org.jcryptool.visual.xeuclidean.views.XEuclideanView">
      </Visual>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/help/contexts.xml">
      </contexts>
   </extension>

<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.xeuclidean.handlers.RestartHandler"
            commandId="org.jcryptool.visual.xeuclidean.restartCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.xeuclidean.restartCommand"
            name="%restart.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.jcryptool.visual.xeuclidean.views.XEuclideanView">
         <command
               commandId="org.jcryptool.visual.xeuclidean.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.gif"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.jcryptool.visual.xeuclidean.views.XEuclideanView">
         <command
               commandId="org.jcryptool.visual.xeuclidean.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.gif"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
